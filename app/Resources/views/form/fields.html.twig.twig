{% block form_row %}
{% spaceless %}
    <div class="form_row">
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    </div>
    <div class="form-group">
        {{ form_label(form.weight, '排序权重', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
        <div class="col-sm-10">
            {{ form_widget(form.weight, {'attr': {'class': 'form-control'}}) }}
            <span class="help-block">排序权重，值越小，排序越靠前，请填写整数</span>
        </div>
    </div>
{% endspaceless %}
{% endblock form_row %}