{% extends "AdminBundle:Product:layout.html.twig" %}
{% set sub_nav = 'product' %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading">
            商品管理
        </div>
        <div class="panel-body">
            <div class="search-form pull-left">
                <form class="form-inline">
                    <div class="form-group">
                        <label for="product-name">商品名称</label>
                        <input type="text" class="form-control" id="product-name" placeholder="商品名称">
                    </div>
                    <div class="form-group">
                        <label for="sort">排序方式</label>
                        <select class="form-control">
                            <option>销量</option>
                            <option>创建时间</option>
                            <option>名称</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-default">搜索</button>
                </form>
            </div>
            <div class="clearfix mbl">
                <span class="pull-right">
                    <div class="btn-group btn-group-sm" role="group">
                        <a href="{{ path('admin_product_add') }}" class="btn btn-info btn-sm">添加商品</a>
                        <a href="javascript:;" class="btn btn-danger btn-sm delete-all">批量删除</a>
                    </div>
                </span>
            </div>
            {% if not products %}
                <div class="alert alert-danger tc">暂无商品</div>
            {% else %}
            {% endif %}
           
        </div>
    </div>
{% endblock %}