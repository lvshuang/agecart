{% extends "AdminBundle:Product:layout.html.twig" %}
{% set sub_nav = 'product' %}

{% block main %}
    <div class="panel panel-default">
        <div class="panel-heading">
            商品管理
        </div>
        <div class="panel-body">
            <div class="search-form pull-left">
                {% if form_errors(form) %}
                    <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ form_errors(form) }}
                    </div>
                {% endif %}
                {{ form_start(form, {'attr': {'class': 'form-inline', 'id': 'product-search-form', 'novalidate': 'novalidate'}}) }}
                    <div class="form-group">
                        {{ form_label(form.name, '商品名称') }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': '商品名称'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.sort, '排序方式') }}
                        {{ form_widget(form.sort, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <button type="submit" class="btn btn-info">搜索</button>
                {{ form_end(form) }}
            </div>
            <div class="clearfix mbl">
                <span class="pull-right">
                    <div class="btn-group btn-group-sm" role="group">
                        <a href="{{ path('admin_product_add') }}" class="btn btn-info btn-sm">添加商品</a>
                        <a href="javascript:;" class="btn btn-danger btn-sm delete-all">批量删除</a>
                    </div>
                </span>
            </div>
            {% if not products %}
                <div class="alert alert-danger tc">暂无商品</div>
            {% else %}
                <table class="table table-responsive">
                    <tr>
                        <th>商品名称</th>
                        <th width="10%">分类</th>
                        <th width="10%">品牌</th>
                        <th width="5%">SKU数量</th>
                        <th width="15%">更新时间</th>
                        <th width="15%">创建时间</th>
                        <th width="20%">操作</th>
                    </tr>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.product_name }}</td>
                            <td>
                                {% if categories[product.category_id] %}
                                    {{ categories[product.category_id].name }}
                                {% else %}
                                    {{ product.category_id }}
                                {% endif %}
                            </td>
                            <td>{{ product.brand_id }}</td>
                            <td>0</td>
                            <td>{{ product.update_time <= 0 ? "" : product.update_time|date("Y-m-d") }}</td>
                            <td>{{ product.create_time is empty ? "" : product.create_time|date("Y-m-d") }}</td>
                            <td>
                                <div class="btn-group btn-group-xs" role="group" aria-label="...">
                                    <button type="button" class="btn btn-info">详情</button>
                                    <button type="button" class="btn btn-success">SKU</button>
                                    <div class="btn-group btn-group-xs" role="group">
                                        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            更多
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li><a href="{{ path('admin_product_edit', {id: product.id}) }}">编辑</a></li>
                                            <li><a href="#">下线</a></li>
                                            <li><a href="#">删除</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
                {{ macro.paginator(paginator) }}
            {% endif %}
           
        </div>
    </div>
{% endblock %}