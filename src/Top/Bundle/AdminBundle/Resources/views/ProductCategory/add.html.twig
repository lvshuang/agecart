{% extends "AdminBundle::modal-layout.html.twig" %}
{% set size = "modal-lg" %}
{% block title %}新增分类{% endblock %}
{% block body %}
    <form class="form-horizontal" action="{{ path('admin_category_add') }}">
        <div class="form-group">
            <label class="col-sm-2 control-label">选择父类</label>
            <div class="col-sm-10 parent-category" data-load-url="{{ path('admin_category_load') }}">
                <span class="help-block">选择父分类，不选则表示新建分类为顶级分类</span>
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.name, '分类名称', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.weight, '排序权重', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.weight, {'attr': {'class': 'form-control'}}) }}
                <span class="help-block">排序权重，值越小，排序越靠前，请填写整数</span>
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.keyword, 'meta关键词', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.keyword, {'attr': {'class': 'form-control'}}) }}
                <span class="help-block">SEO关键词，多个请用逗号隔开</span>
            </div>
        </div>
        <div class="form-group">
            {{ form_label(form.description, 'meta描述', {'label_attr': {'class': 'col-sm-2 control-label'}}) }}
            <div class="col-sm-10">
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '5'}}) }}
                <span class="help-block">SEO描述</span>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>
    <script type="text/javascript">window.app.load('category_add')</script>
{% endblock %}