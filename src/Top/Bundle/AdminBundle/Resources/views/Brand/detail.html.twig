{% extends 'AdminBundle:Product:layout.html.twig' %}
{% set sub_nav = 'brand' %}
{% block main %}
    <ol class="breadcrumb">
        <li><a href="{{ path('admin_homepage') }}">首页</a></li>
        <li><a href="{{ path('admin_brand') }}">品牌列表</a></li>
        <li class="active">品牌详情</li>
    </ol>
    <div class="panel panel-default">
        <div class="panel-heading">
            品牌详情
        </div>
        <div class="panel-body">
            <div class="clearfix mbl">
                <span class="pull-right">
                    <div class="btn-group btn-group-sm" role="group">
                        <a href="{{path('admin_brand_edit', {id: brand.id})}}" class="btn btn-info btn-sm">
                            <span class="glyphicon glyphicon-pencil"></span>编辑
                        </a>
                    </div>
                </span>
            </div>
        </div>
        <table class="table">
            <tr><th>品牌名称</th><td>{{ brand.name }}</td></tr>
            <tr><th>名称缩写</th><td>{{ brand.short_name }}</td></tr>
            <tr><th>分类</th><td>{{ categoryName }}</td></tr>
            <tr>
                <th>Logo</th>
                <td>
                    <img src="/upload/{{ brand.logo }}">
                </td>
            </tr>
            <tr>
                <th>是否启用</th>
                <td>
                    {% if brand.enable %}
                        <span class="label label-success">是</span>
                    {% else %}
                        <span class="label label-danger">否</span>
                    {% endif %}
                </td>
            </tr>
            <tr><th>排序</th><td>{{ brand.weight }}</td></tr>
            <tr><th>最后修改时间</th><td>{{ brand.update_time|date('Y-m-d H:i:s') }}</td></tr>
            <tr><th>创建时间</th><td>{{ brand.create_time|date('Y-m-d H:i:s') }}</td></tr>
        </table>
    </div>
{% endblock %}