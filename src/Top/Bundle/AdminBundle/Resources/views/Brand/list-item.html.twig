<tr id="{{ brand.id }}">
    <td><a href="{{ path('admin_brand_detail', {id: brand.id}) }}" class="link">#{{ brand.id }}</a></td>
    <td>{{ brand.name }}</td>
    <td>{{ brand.short_name }}</td>
    <td><img src="/upload/{{ brand.logo }}" width="102px" height="36px"></td>
    <td>{% if category %} {{ category.name }} {% else %}N/A{% endif %}</td>
    <td>
        {% if brand.enable %}
            <span class="label label-success">是</span>
        {% else %}
            <span class="label label-danger">否</span>
        {% endif %}
    </td>
    <td>
        {{ brand.create_time|date("Y-m-d H:i:s") }}
    </td>
    <td>
        <div class="btn-group btn-group-xs" role="group" aria-label="...">
              <a href="{{ path('admin_brand_detail', {id: brand.id}) }}" class="btn btn-info">详情</a>
              <a href="{{ path('admin_brand_edit', {id: brand.id}) }}" class="btn btn-success">编辑</a>
              <div class="btn-group btn-group-xs" role="group">
                <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  更多
                  <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <li>
                        {% if brand.enable %}
                            <a href="javascript:;" class="brand-switch-btn" data-url="{{ path('admin_brand_switch', {id: brand.id, type:'disable'}) }}">禁用</a>
                        {% else %}
                            <a href="javascript:;" class="brand-switch-btn" data-url="{{ path('admin_brand_switch', {id: brand.id, type:'enable'}) }}">启用</a>
                        {% endif %}
                    </li>
                    <li>
                        <a href="javascript:;" class="brand-delete-btn" data-url="{{ path('admin_brand_delete') }}" data-id="{{ brand.id }}">删除</a>
                    </li>
                </ul>
              </div>
        </div>
    </td>
</tr>