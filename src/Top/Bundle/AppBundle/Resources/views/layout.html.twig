<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Age Cart 购物车系统{% endblock %}</title>
        <link rel="stylesheet" type="text/css" href="{{ asset('lib/bootstrap/3.3.5/css/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('lib/common/common.css') }}">
        <link rel="stylesheet" href="{{ asset('bundles/app/css/app.css') }}">
        <!--<script type="text/javascript" src="{{ asset('lib/bootstrap/3.3.5/js/bootstrap.min.js') }}"></script> -->
    </head>
    <body>
        <div class="agc-top-bar">
            <div class="container">
                <div class="col-md-12">
                    <span><a href="javascript:;">送至: 成都</a></span>
                    <div class="pull-right">
                        <span class="agc-mrl"><a href="">登陆</a></span>
                        <span><a href="">注册</a></span>
                    </div>
                </div>
            </div>
        </div> 
        {% block main_search %}
        <div class="agc-top-block">
            <div class="container">
                <div class="col-md-12">
                    <div class="agc-logo"><a href=""></a></div>
                    <div class="agc-search">
                        <input type="" name="search" class="input" />
                        <button>搜索</button>
                    </div>
                    <div class="agc-top-cart">
                        <div class="icon">
                            <a href="{{ url('app_my_cart') }}"><span class="glyphicon glyphicon-shopping-cart agc-mrs"></span>我的购物车</a>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}

        {% block nav %}
            <div class="agc-nav">
                <div class="container">
                    <div class="col-md-12">
                        <ul class="agc-nav-menus">
                            <li class="agc-nav-menu active"><a href="">全部分类</a></li>
                            <li class="agc-nav-menu"><a href="">首页</a></li>
                            <li class="agc-nav-menu"><a href="">团购</a></li>
                            <li class="agc-nav-menu"><a href="">折扣</a></li>
                            <li class="agc-nav-menu"><a href="">最近上架</a></li>
                            <li class="agc-nav-menu"><a href="">热销商品</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        {% endblock %}

        <div class="agc-body agc-mtl">
            <div class="container">
                {% block body %}
                {% endblock %}
            </div>
        </div>

        <div class="agc-footer">
            <div class="container">
                {% block footer %}

                {% endblock %}
            </div>
        </div>
        
    </body>
    <script type="text/javascript">
        var app = {};
        app.debug = {% if app.debug %}true{% else %}false{% endif %};
        app.version = '{{ assets_version() }}';

        {% if app.user %}
            app.user = {
              id : {{ app.user.id }},
              login : true
            };
        {% else %}
            app.user = {
              id : 0,
              login : false
            };
        {% endif %}
    </script>
    <script type="text/javascript" src="{{ asset('lib/seajs/2.3.0/sea.js') }}"></script>
    <script type="text/javascript" src="{{ asset('lib/seajs/2.3.0/sea-css.js') }}"></script>
    <script type="text/javascript" src="{{ asset('lib/seajs/config.js') }}"></script>
    <script type="text/javascript">
        {% set script = script|default(null) %}
        {% if script %}
            window.app.script = '{{script}}';
        {% endif %}
        
        seajs.use('/bundles/app/js/app.js');
        
    </script>
</html>

